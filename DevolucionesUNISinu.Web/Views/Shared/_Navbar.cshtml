@using System.Security.Claims;
<!-- Navbar -->
<div class="wrapper">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-action="Dashboard" asp-controller="Admin" class="nav-link"><i class="fas fa-home"></i> Inicio</a>
            </li>

        </ul>

        <ul class="navbar-nav ml-6">
            <li class="nav-item">
                <a asp-action="Dashboard" asp-controller="Admin" class="nav-link">Devoluciones Unisinú</a>
            </li>

        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">

            <li class="nav-item dropdown user-menu">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <img class="round user-image img-circle elevation-2" width="50" height="50" avatar="@User.FindFirst("nombres").Value">

                </a>
                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="left: inherit; right: 0px;">
                    <!-- User image -->
                    <li class="user-header bg-danger">
                        <img class="round user-image img-circle elevation-2" width="100" height="100" avatar="@User.FindFirst("nombres").Value">

                        <p>
                            @User.FindFirst("nombres").Value
                            <small>@User.FindFirst("Email").Value</small>
                        </p>
                    </li>

                    <!-- Menu Body -->
                    <li class="user-body">
                        <div class="row">
                            <div class="col-12 text-center">
                                @if (User.IsInRole("Estudiante"))
                                {
                                    <a href="javascript:mostrarModalLg('@Url.Action("Detalle","Estudiantes",new {id=User.FindFirst("EstudianteId").Value},Context.Request.Scheme)','Perfil')">Perfil</a>
                                }
                            </div>
                        </div>
                        <hr />
                        @if (User.IsInRole("Estudiante"))
                        {
                            <div class="row">
                                <div class="col-12 text-center">
                                    <a href="javascript:mostrarModalLg('@Url.Action("Editar","Estudiantes",new {id=User.FindFirst("EstudianteId").Value},Context.Request.Scheme)','Editar información')">Editar información</a>
                               
                                </div>
                            </div>
                            <hr />
                        }
                            <div class="row">
                                <div class="col-12 text-center">
                                    <a href="javascript:mostrarModal('@Url.Action("CambiarEmail","Usuarios",new {id=User.FindFirstValue(ClaimTypes.NameIdentifier)},Context.Request.Scheme)','Actualizar email')">Actualizar email</a>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-12 text-center">
                                    <a href="javascript:mostrarModal('@Url.Action("CambiarPassword","Usuarios",new {id=User.FindFirstValue(ClaimTypes.NameIdentifier)},Context.Request.Scheme)','Actualizar contraseña')">Actualizar contraseña</a>
                                </div>
                            </div>
                            <!-- /.row -->
                        </li>

                    <!-- Menu Footer-->

                    <li class="user-footer align-items-center">
                        <div class="row align-items-center offset-3">
                            <a asp-action="CerrarSesion" asp-controller="Usuarios" class="btn btn-default btn-flat text-center">Cerrar sesión</a>
                        </div>
                        
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>

        </ul>
    </nav>
    <!-- /.navbar -->
</div>
@section Scripts{
}