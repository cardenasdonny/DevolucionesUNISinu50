@model DevolucionesUNISinu.Business.DTOs.Devoluciones.ConceptoDevolucionDto

@{
    Layout = null;
}
@section Styles{

}

<form asp-action="Crear" autocomplete="off" id="formulario" onsubmit="return jQueryAjaxPost(this,'Crear concepto de devolución', '¿Desea crear el concepto de devolución?');">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <span asp-validation-for="Nombre" class="text-danger error"></span>
        <input asp-for="Nombre" class="form-control" />
        <br />
        <label asp-for="DocumentosRequeridos" class="control-label"></label>
        <textarea rows="10" asp-for="DocumentosRequeridos" class="form-control"></textarea>
        <span asp-validation-for="DocumentosRequeridos" class="text-danger error"></span>
        
    </div>

    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
        </div>
    </div>
</form>

<script src="~/js/site.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")