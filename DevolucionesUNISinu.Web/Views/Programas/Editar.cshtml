@model DevolucionesUNISinu.Business.DTOs.Facultades.ProgramaDto

@{
    Layout = null;
}
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />

<form asp-action="Editar" autocomplete="off" id="formulario" onsubmit="return jQueryAjaxPost(this,'Crear programa', '¿Desea crear el programa?');">

    <input asp-for="ProgramaId" type="hidden" />
    <input asp-for="Estado" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FacultadId" class="control-label"></label>
        <select asp-for="FacultadId" asp-items="ViewBag.ListaFacultades" class="form-control select-list">
            <option disabled selected>--- Seleccione ---</option>

        </select>
        <span asp-validation-for="FacultadId" class="text-danger error"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoProgramaId" class="control-label"></label>
        <select asp-for="TipoProgramaId" asp-items="ViewBag.ListaTiposProgramas" class="form-control select-list">
            <option disabled selected>--- Seleccione ---</option>

        </select>
        <span asp-validation-for="TipoProgramaId" class="text-danger error"></span>
    </div>


    <div class="form-group">

        <label asp-for="Semestres" class="control-label"></label>
        <input asp-for="Semestres" class="form-control" />
        <span asp-validation-for="Semestres" class="text-danger error"></span>

    </div>

    <div class="form-group">
        <div class="row col-md-6 offset-md-3">
            <input type="submit" value="Editar" class="btn btn-primary btn-block" />
        </div>
    </div>
</form>


<script src="~/js/site.js"></script>
<script src="~/js/select.js"></script>
<script src="~/lib/select2/js/i18n/es.min.js"></script>

@await Html.PartialAsync("_ValidationScriptsPartial")